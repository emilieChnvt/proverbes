{% extends 'base.html.twig' %}
{% block body %}
    <div class="min-h-screen flex items-center justify-center bg-gradient-to-r from-purple-400 via-pink-500 to-red-500 px-6">
        <div class="bg-white max-w-xl w-full rounded-2xl p-12 shadow-xl text-center">

            <h1 class="text-4xl font-extrabold text-gray-900 mb-8">
                Proverbe du jour
            </h1>

            <p class="text-2xl italic text-gray-700 leading-relaxed mb-6">
                “{{ proverbe.content }}”
            </p>

            <p class="text-lg font-semibold text-gray-900">
                — {{ proverbe.author }}
            </p>

            <a href="{{ path('app_proverbe_index') }}"
               class="inline-block mt-10 px-8 py-3 bg-purple-600 hover:bg-purple-700 text-white font-semibold rounded-full transition duration-300">
                ← Retour à la liste
            </a>

        </div>
    </div>
{% endblock %}
