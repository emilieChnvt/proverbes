{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="max-w-md mx-auto mt-10 bg-white p-8 rounded-lg shadow-lg">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="mb-4 text-sm text-red-600 bg-red-100 border border-red-300 p-3 rounded">
                {{ flash_error }}
            </div>
        {% endfor %}

        <h1 class="text-2xl font-bold text-center mb-6">Cr√©er un compte</h1>

        {{ form_start(registrationForm) }}
        <div class="mb-4">
            {{ form_label(registrationForm.email, null, {'label_attr': {'class': 'block mb-1 font-medium text-gray-700'}}) }}
            {{ form_widget(registrationForm.email, {'attr': {'class': 'w-full px-4 py-2 border rounded-md focus:ring focus:ring-blue-300'}}) }}
            {{ form_errors(registrationForm.email) }}
        </div>

        <div class="mb-4">
            {{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block mb-1 font-medium text-gray-700'}}) }}
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full px-4 py-2 border rounded-md focus:ring focus:ring-blue-300'}}) }}
            {{ form_errors(registrationForm.plainPassword) }}
        </div>

        <div class="mb-4">
            <div class="flex items-center">
                {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'mr-2'}}) }}
                {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'text-sm text-gray-700'}}) }}
            </div>
            {{ form_errors(registrationForm.agreeTerms) }}
        </div>

        <button type="submit" class="w-full bg-blue-600 text-white font-semibold py-2 px-4 rounded hover:bg-blue-700 transition">
            S'inscrire
        </button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
